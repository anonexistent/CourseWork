<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow" Height="450" Width="750">

    <Grid Margin="15, 15, 15, 15" Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <oxy:PlotView Model="{Binding PlotModel}" Margin="10"/>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBox x:Name="txtFunction" FontSize="22"  VerticalAlignment="Top" MinWidth="350" Margin="10"/>
            <Button Content="Построить график" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click"/>
        </StackPanel>


    </Grid>
</Window>
