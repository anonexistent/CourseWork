<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow" Height="450" Width="750">

    <Grid Margin="15, 15, 15, 15" Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <oxy:PlotView x:Name="pvMain" Model="{Binding Model1}" Margin="15" MinHeight="100" MinWidth="100" Grid.ColumnSpan="2"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" MinWidth="250" VerticalAlignment="Center" >
            <TextBox x:Name="tbFunc" FontSize="24" KeyDown="tbFunc_KeyDown"/>
            <Button x:Name="btnGet" Content="result" FontSize="20" Margin="0 15 0 0" Click="btnGet_Click"/>

        </StackPanel>
        
    </Grid>
</Window>
